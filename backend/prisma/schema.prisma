generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  leads     Lead[]
  createdAt DateTime @default(now())
}

enum LeadChannel {
  INSTAGRAM
  WHATSAPP
  OUTRO
}

enum LeadStatus {
  MANDADO
  VISUALIZOU
  RESPONDEU
  NEGOCIANDO
  FECHADO
}

model Lead {
  id        Int        @id @default(autoincrement())
  name      String
  contact   String
  channel   LeadChannel
  status    LeadStatus @default(MANDADO)
  whatsapp  String?
  instagram String?
  website   String?
  address   String?
  rating    Float?
  reviews   Int?
  mapUrl    String?
  city      String?
  niche     String?
  notes     String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  owner     User       @relation(fields: [ownerId], references: [id])
  ownerId   Int

  @@index([ownerId, status])
  @@index([ownerId, channel])
  @@index([ownerId, createdAt])
}
